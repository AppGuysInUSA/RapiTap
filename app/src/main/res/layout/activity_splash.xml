<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_black_bg"
    tools:context=".SplashActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:id="@+id/tapTable">

        <TableRow
            android:background="@drawable/layout_blue_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/headerRow">

            <ImageView
                android:id="@+id/rapitaptitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/rapitaptitle2" />
        </TableRow>

        <TableRow
            android:id="@+id/row1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bck_grnd_states"
                android:textColor="#000000"
                android:textSize="36dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="New Game"
                android:gravity="center"
                android:id="@+id/newGameTextView" />

        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bck_grnd_states"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Resume Game"
                android:textSize="36dp"
                android:gravity="center"
                android:id="@+id/resumeGameTextView" />
        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bck_grnd_states"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="High Scores"
                android:textSize="36dp"
                android:gravity="center"
                android:id="@+id/highScoreTextView" />
        </TableRow>

        <TableRow
            android:id="@+id/row4"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/bck_grnd_states"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30dp"
                android:gravity="center"
                android:id="@+id/levelOneBackView"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/bck_grnd_states"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30dp"
                android:gravity="center"
                android:id="@+id/levelTwoBackView"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/bck_grnd_states"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30dp"
                android:gravity="center"
                android:id="@+id/levelThreeBackView"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/bck_grnd_states"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30dp"
                android:gravity="center"
                android:id="@+id/levelFourBackView"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/bck_grnd_states"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30dp"
                android:gravity="center"
                android:id="@+id/levelFiveBackView"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
